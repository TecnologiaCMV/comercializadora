@model lluviaBackEnd.Models.Ventas
@{
    ViewBag.Title = "Ventas";
    List<lluviaBackEnd.Models.Ventas> lstVentas = ViewBag.lstVentas;
    List<lluviaBackEnd.Models.Producto> lstProductos = ViewBag.lstProductos;
    List<lluviaBackEnd.Models.FormaPago> lstFormasPago = ViewBag.lstFormasPago;
    List<SelectListItem> lstClientes = (List<SelectListItem>)ViewBag.lstClientes;
    lluviaBackEnd.Models.Ventas venta = ViewBag.venta;
    int idVenta = ViewBag.venta.idVenta;
    lluviaBackEnd.Models.Notificacion<List<lluviaBackEnd.Models.Ticket>> notificacion = new lluviaBackEnd.Models.Notificacion<List<lluviaBackEnd.Models.Ticket>>();


    if (idVenta > 0)
    {
        notificacion = new lluviaBackEnd.DAO.VentasDAO().ObtenerTickets(new lluviaBackEnd.Models.Ticket() { idVenta = idVenta });
        //List<lluviaBackEnd.Models.Ticket> lstTicket = notificacion.Modelo;

    }


}

@section Styles {
    <link rel="stylesheet" href="~/assets/bundles/datatables/datatables.min.css">
    <link rel="stylesheet" href="~/assets/bundles/datatables/DataTables-1.10.16/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/bundles/pretty-checkbox/pretty-checkbox.min.css" />
    <link rel="stylesheet" href="~/assets/bundles/bootstrap-daterangepicker/daterangepicker.css" />
    <link rel="stylesheet" href="~/assets/bundles/select2/dist/css/select2.min.css" />
}


    <section class="section">


        <div class="section-body">
            <div class="row mt-sm-4">
                <div class="col-12 col-md-12 col-lg-4">


                    <div class="card">
                        <div class="card-header">
                            <h4>Agregar Productos</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Producto</label>
                                @Html.HiddenFor(x => idVenta);
                                @Html.DropDownListFor(model => model.precio, new SelectList(lstProductos, "idProducto", "descripcion"), new { id = "idProducto", style = "width:100%", @class = "select-multiple", placeholder = "", data_val_required = "Seleccione un producto", data_val = "true" })
                            </div>
                            <div class="form-group">
                                <p class="clearfix">
                                    <span class="float-left">
                                        <label>Cantidad</label>
                                    </span>
                                    <span class="float-right text-muted">
                                        <input id="cantidad" type="text" class="form-control" onkeypress="return esNumero(event)">
                                    </span>
                                </p>
                            </div>
                            <div class="form-group">
                                <div class="text-right" style="margin-top:30px;">
                                    <button type="button" id="btnAgregarProducto" class="btn btn-success"> &nbsp; Agregar &nbsp;</button>
                                </div>
                            </div>
                        </div>
                    </div>

                   

                </div>
                <div class="col-12 col-md-12 col-lg-8">
                    <div class="card">
                        <div class="padding-20">

                            <div class="col-md-12">
                                <div class="section-title">Resumen de la venta</div>
                                @*<div class="section-title" id="descuentoCliente">Resumen de la venta</div>*@

                                <div class="table-responsive">
                                    <table class="table table-striped" id="tablaRepVentas">
                                        <thead>
                                            <tr>
                                                <th data-width="40" style="width: 40px;">#</th>
                                                <th>Id Producto</th>
                                                <th>Producto</th>
                                                <th class="text-center">Precio</th>
                                                <th class="text-center">Cantidad</th>
                                                <th class="text-center">Total</th>
                                                <th class="text-center">Acciones</th>
                                            </tr>
                                        </thead>
                                        @if (notificacion.Modelo != null)
                                        {
                                            if (notificacion.Modelo.Count() > 0)
                                            {
                                                <tbody>
                                                    @foreach (var item in notificacion.Modelo)
                                                    {
                                                        <tr>
                                                            <td>1</td>
                                                            <td>@item.idProducto</td>
                                                            <td>@item.descProducto</td>
                                                            <td class="text-center">$@item.monto</td>
                                                            <td class="text-center">@item.cantidad</td>
                                                            <td class="text-center">$@Convert.ToInt32(item.cantidad * @item.monto)</td>
                                                            <td class="text-center">7</td>
                                                        </tr>

                                                    }

                                                </tbody>
                                            }
                                        }
                                        else
                                        {
                                            <tbody></tbody>
                                        }

                                    </table>
                                </div>

                                <div class="row mt-4">
                                    <div class="col-lg-6">

                                    </div>
                                    <div class="col-lg-6 text-right">
                                        <div class="invoice-detail-item">
                                            <div class="invoice-detail-name">Subtotal</div>
                                            <div class="invoice-detail-value" id="divSubTotal">$670.99</div>
                                        </div>
                                        <div class="invoice-detail-item">
                                            <div class="invoice-detail-name">I.V.A.</div>
                                            <div class="invoice-detail-value" id="divIva">$15</div>
                                        </div>
                                        <hr class="mt-2 mb-2">
                                        <div class="invoice-detail-item">
                                            <div class="invoice-detail-name">Total</div>
                                            <div class="invoice-detail-value invoice-detail-value-lg" id="divTotal">$685.99</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr>
                            <div class="text-md-right">
                                <button id="limpiar" class="btn btn-danger btn-icon icon-left"><i class="fas fa-times"></i>Limpiar</button>
                                <button id="previoVenta" class="btn btn-primary btn-icon icon-left">
                                    <i class="fas fa-credit-card"></i> Realizar Venta
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>






@*Modal previo venta *@
<div class="modal fade bd-example-modal-lg" id="ModalPrevioVenta" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="TituloModalPrevioVenta">Previo: </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="row">

                    <div class="col-lg-7">
                        <div class="section-title"><strong>Cliente: </strong></div>
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.idCliente, lstClientes, new { id = "idCliente", style = "width:100%", @class = "select-multiple", placeholder = "", data_val_required = "Seleccione un cliente", data_val = "true" })
                        </div>


                        <div class="row">
                            <div class="col-md-12">
                                <div id="nombreCliente">
                                    <address>
                                        <strong></strong><br>
                                        <br>
                                        <br>
                                        <br>
                                        <br>
                                        
                                    </address>
                                </div>
                            </div>
                        </div>


                        <div class="section-title"><strong>Forma de Pago: </strong></div>
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.formaPago, new SelectList(lstFormasPago, "formaPago", "descripcion"), new { id = "formaPago", style = "width:100%", @class = "select-multiple", placeholder = "", data_val_required = "Seleccione una forma de pago", data_val = "true" })
                        </div>

                    </div>

                    <div class="col-lg-5 text-right">
                        <div class="invoice-detail-item">
                            <div class="invoice-detail-name"><strong>Total:</strong></div>
                            <div class="invoice-detail-value" id="previoTotal"><h3>$15</h3></div>
                        </div>
                        <div class="invoice-detail-item">
                            <div class="invoice-detail-name"><strong>Descuento:</strong></div>
                            <div class="invoice-detail-value" id="previoDescuento"><h3>$15</h3></div>
                        </div>
                        <div class="invoice-detail-item">
                            <div class="invoice-detail-name"><strong>Subtotal:</strong></div>
                            <div class="invoice-detail-value" id="previoSubTotal"><h3>$15</h3></div>
                        </div>
                        <div class="invoice-detail-item">
                            <div class="invoice-detail-name"><strong>I.V.A.</strong></div>
                            <div class="invoice-detail-value" id="previoIVA"><h3>$15</h3></div>
                        </div>
                        <hr class="mt-2 mb-2">
                        <div class="invoice-detail-item">
                            <div class="invoice-detail-name"><strong>Total</strong></div>
                            <div class="invoice-detail-value invoice-detail-value-lg" id="previoFinal"><h3>$15</h3></div>
                        </div>
                    </div>

                </div>

                <div class="row mt-4">
                                                         
                </div>

                <div class="row">
                    <div class="col-12 col-sm-12 col-lg-12">
                        <div class="text-right" style="margin-top:15px;">
                            <button type="button" id="cancelar" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                            <button type="button" id="btnGuardarVenta" class="btn btn-success">Guardar</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



