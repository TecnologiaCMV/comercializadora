@using lluviaBackEnd.Models;

@model List<Proveedor>

@if (Model.Count == 0)
{

    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-info"></i>
        </div>
        <h2>No se encontraron resultados</h2>
    </div>

}
else
{
    <div class="table-responsive">
        <table class="table table-striped" id="tblNivelServicioProveedor">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre Proveedor</th>
                    <th>Total Pedidos Incompletos</th>
                    <th>Total Pedidos Totales</th>
                    <th>Porcentaje Atendido</th>                    
                </tr>
            </thead>
            <tbody>

                @foreach (lluviaBackEnd.Models.Proveedor c in Model)
                {
                <tr>
                    <td>@c.idProveedor</td>
                    <td>@c.nombre</td>
                    <td>@c.totalPedidosIncompletos</td>
                    <td>@c.totalPedidosTotales</td>
                    <td>@c.PorcAtendido %</td>              
                </tr>
                }
            </tbody>
        </table>
    </div>

}


