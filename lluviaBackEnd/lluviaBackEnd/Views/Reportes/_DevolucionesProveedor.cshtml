@using lluviaBackEnd.Models;

@model List<DevolucionProveedor>

@if (Model.Count == 0)
{

    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-info"></i>
        </div>
        <h2>No se encontraron resultados</h2>
    </div>

}
else
{
    <div class="table-responsive">
        <table class="table table-striped" id="tblDevolucionesProveedor">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Folio Compra</th>
                    <th>Folio Devolucion</th>
                    <th>Usuario</th>
                    <th>Proveedor</th>
                    <th>Codigo de Barras</th>
                    <th>Linea</th>
                    <th>Producto</th>
                    <th>Cant. Solicitada</th>
                    <th>Cant. Recibida</th>
                    <th>Cant. Devuelta</th>
                    <th>Motivo Devolucion</th>
                </tr>
            </thead>
            <tbody>

                @foreach (lluviaBackEnd.Models.DevolucionProveedor c in Model)
                {
                <tr>
                    <td>@c.Fecha</td>
                    <td>@c.idCompra</td>
                    <td>@c.IdDevolucion</td>
                    <td>@c.usuario.nombreCompleto</td>
                    <td>@c.proveedor.nombre</td>
                    <td>@c.producto.codigoBarras</td>
                    <td>@c.producto.DescripcionLinea</td>
                    <td>@c.producto.descripcion</td>
                    <td>@c.producto.cantidad</td>
                    <td>@c.producto.cantidadRecibida</td>
                    <td>@c.producto.cantidadDevuelta</td>    
                    <td>@c.producto.observaciones</td>
                </tr>
                }
            </tbody>
        </table>
    </div>

}



