@using lluviaBackEnd.Models;
@model List<InventarioFisico>

@if (Model.Count == 0)
{

    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-info"></i>
        </div>
        <h2>No se encontraron resultados</h2>
    </div>

}
else
{
    <div class="table-responsive">
        <table class="table table-striped" id="tblInventarioFisico">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Sucursal</th>
                    <th>Activo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>

                @foreach (lluviaBackEnd.Models.InventarioFisico c in Model)
                {
                    <tr>
                        <td>@c.idInventarioFisico</td>
                        <td>@c.Nombre</td>
                        <td>@Html.Raw(c.FechaInicio == DateTime.MinValue ? "" : c.FechaInicio.ToLongDateString())</td>
                        <td>@Html.Raw(c.FechaFin == DateTime.MinValue ? "" : c.FechaFin.ToLongDateString())</td>
                        <td>@c.Sucursal.descripcion</td>
                        <th>@Html.Raw(c.Activo == true ? "SI" : "NO")</th>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
