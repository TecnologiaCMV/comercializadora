
@using lluviaBackEnd.Models;
@model List<AjusteInventarioFisico>

@if (Model.Count == 0)
{

    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-info"></i>
        </div>
        <h2>No se encontraron resultados</h2>
    </div>

}
else
{
    <div class="table-responsive">
        <table class="table table-striped" id="tblAjusteInventarioFisico">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Producto</th>
                    <th>Linea Producto</th>
                    <th>Almacen</th>
                    <th>Piso</th>
                    <th>Pasillo</th>
                    <th>Raq</th>
                    <th>Cantidad Actual</th>
                    <th>Cantidad Fisico</th>
                    <th>Cantidad Ajustar</th>
                </tr>
            </thead>
            <tbody>

                @foreach (lluviaBackEnd.Models.AjusteInventarioFisico c in Model)
                {
                <tr>
                    <td>@c.idAjusteInventarioFisico</td>
                    <td>@c.producto.descripcion</td>
                    <td>@c.producto.DescripcionLinea</td>
                    <td>@c.producto.Almacen</td>
                    <td>@c.producto.Piso</td>
                    <td>@c.producto.Pasillo</td>
                    <td>@c.producto.Raq</td>
                    <td>@c.cantidadActual</td>
                    <td>
                        @if (c.cantidadActual == c.cantidadEnFisico)
                        {
                            <div class="badge badge-success badge-shadow">@c.cantidadEnFisico</div>
                        }
                        else if (c.cantidadEnFisico < c.cantidadActual)
                        {
                            <div class="badge badge-danger badge-shadow">@c.cantidadEnFisico</div>
                        }
                        else if (c.cantidadEnFisico > c.cantidadActual)
                        {
                            <div class="badge badge-warning badge-shadow">@c.cantidadEnFisico</div>
                        }


                    </td>
                    <td>@c.cantidadAAjustar</td>                   
                </tr>
                }
            </tbody>
        </table>
    </div>
}
