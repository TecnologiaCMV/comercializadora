@model lluviaBackEnd.Models.LineaProducto
@{
    List<lluviaBackEnd.Models.LineaProducto> lstLineaProducto = ViewBag.lstLineaProducto;
}

<div class="section-body">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped" id="tablaLineaProductos">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        idLineaProducto
                                    </th>
                                    <th>descripcion</th>
                                    <th>activo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in lstLineaProducto)
                                {
                                    <tr>
                                        <td>@item.idLineaProducto</td>
                                        <td>@item.descripcion</td>
                                        <td>@item.activo</td>

                                        
                                        <td>
                                            <div class="buttons">
                                                <a href="javascript:VerLineaProducto(@item.idLineaProducto);" class="btn btn-icon btn-info" data-toggle="tooltip" title="Ver"><i class="fas fa-eye"></i></a>
                                                <a href="javascript:EditarLineaProducto(@item.idLineaProducto);" class="btn btn-icon btn-primary" data-toggle="tooltip" title="Editar"><i class="far fa-edit"></i></a>
                                                <a href="javascript:EliminarLineaProducto(@item.idLineaProducto);" class="btn btn-icon btn-danger" data-toggle="tooltip" title="Eliminar"><i class="fas fa-times"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

